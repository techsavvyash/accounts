# Database
DATABASE_URL="postgresql://user:password@localhost:5432/accounts"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRY="7d"
REFRESH_TOKEN_EXPIRY="30d"

# Server Configuration
PORT=3000
NODE_ENV="development"

# CORS Configuration (comma-separated origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Analytics (PostHog)
POSTHOG_API_KEY=""
POSTHOG_HOST="https://app.posthog.com"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# S3 / File Storage
S3_BUCKET="accounts-files"
S3_REGION="us-east-1"
S3_ACCESS_KEY=""
S3_SECRET_KEY=""

# Encryption Configuration
# IMPORTANT: Generate with: openssl rand -hex 32
# This key encrypts all sensitive data. NEVER commit it to version control.
# Store securely and backup separately from database.
MASTER_ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# Encryption Setup (run once for existing tenants)
# Set to "true" on first deployment with encryption enabled
SETUP_ENCRYPTION="false"

# Development / Testing
# Set to "true" to enable detailed logging
DEBUG="false"
