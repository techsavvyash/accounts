{
  "name": "@accounts/gst",
  "version": "1.0.0",
  "description": "GST (Goods and Services Tax) compliance and calculation package for India",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir=dist --target=node --format=esm --splitting --minify",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "gst",
    "gstin",
    "tax",
    "india",
    "compliance",
    "gstr1",
    "gstr3b",
    "calculation"
  ],
  "author": "Business Accounts Management",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  }
}