{
  "name": "@accounts/analytics",
  "version": "1.0.0",
  "description": "Business analytics and tracking utilities for the accounts management platform",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir=dist --target=node --format=esm --splitting --minify",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "analytics",
    "posthog",
    "business-intelligence",
    "tracking",
    "metrics",
    "kpi",
    "accounting"
  ],
  "author": "Business Accounts Management",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "posthog-node": "^4.3.1",
    "zod": "^3.22.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  }
}